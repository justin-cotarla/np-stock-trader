{
    "compilerOptions": {
        "preserveConstEnums": true,
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": [
            "es6"
        ],
        "outDir": "dist/",
    },
    "include": [
      "src", "index.ts"
    ]
  }